<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xmlns:jsr107="http://www.ehcache.org/v3/jsr107"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd
                            http://www.ehcache.org/v3/jsr107 http://www.ehcache.org/schema/ehcache-107-ext-3.0.xsd">

    <!-- Cache pour les entités (Hibernate L2 Cache) -->
    <cache-template name="entityCacheTemplate">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache-template>

    <!-- Cache pour les collections (Hibernate L2 Cache) -->
    <cache-template name="collectionCacheTemplate">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
            <offheap unit="MB">5</offheap>
        </resources>
    </cache-template>

    <!-- Cache pour les requêtes (Hibernate Query Cache) -->
    <cache-template name="queryCacheTemplate">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="minutes">15</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">20</offheap>
        </resources>
    </cache-template>

    <!-- Cache Spring Cache pour les stations -->
    <cache alias="stations" uses-template="entityCacheTemplate">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

    <!-- Cache Spring Cache pour les régions -->
    <cache alias="regions" uses-template="entityCacheTemplate">
        <expiry>
            <ttl unit="hours">2</ttl>
        </expiry>
        <resources>
            <heap unit="entries">100</heap>
            <offheap unit="MB">5</offheap>
        </resources>
    </cache>

    <!-- Cache Spring Cache pour les corps -->
    <cache alias="corps" uses-template="entityCacheTemplate">
        <expiry>
            <ttl unit="hours">2</ttl>
        </expiry>
        <resources>
            <heap unit="entries">100</heap>
            <offheap unit="MB">5</offheap>
        </resources>
    </cache>

    <!-- Cache Spring Cache pour les répartitions -->
    <cache alias="repartitions" uses-template="entityCacheTemplate">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

    <!-- Cache Spring Cache pour les sociétés -->
    <cache alias="societes" uses-template="entityCacheTemplate">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap unit="entries">200</heap>
            <offheap unit="MB">5</offheap>
        </resources>
    </cache>

    <!-- Cache Spring Cache pour les utilisateurs -->
    <cache alias="users" uses-template="entityCacheTemplate">
        <expiry>
            <ttl unit="minutes">15</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

    <!-- Cache Spring Cache pour les planifications de vente -->
    <cache alias="saleSchedules" uses-template="entityCacheTemplate">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">20</offheap>
        </resources>
    </cache>

    <!-- Cache Spring Cache pour les tickets -->
    <cache alias="tickets" uses-template="entityCacheTemplate">
        <expiry>
            <ttl unit="minutes">5</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">30</offheap>
        </resources>
    </cache>

    <!-- Cache par défaut pour Hibernate L2 Cache (entités) -->
    <cache alias="com.example.fuelticket.entity.Station" uses-template="entityCacheTemplate"/>
    <cache alias="com.example.fuelticket.entity.Region" uses-template="entityCacheTemplate"/>
    <cache alias="com.example.fuelticket.entity.Corps" uses-template="entityCacheTemplate"/>
    <cache alias="com.example.fuelticket.entity.Repartition" uses-template="entityCacheTemplate"/>
    <cache alias="com.example.fuelticket.entity.Societe" uses-template="entityCacheTemplate"/>
    <cache alias="com.example.fuelticket.entity.User" uses-template="entityCacheTemplate"/>
    <cache alias="com.example.fuelticket.entity.SaleSchedule" uses-template="entityCacheTemplate"/>
    <cache alias="com.example.fuelticket.entity.Ticket" uses-template="entityCacheTemplate"/>
    <cache alias="com.example.fuelticket.entity.FuelStock" uses-template="entityCacheTemplate"/>
    <cache alias="com.example.fuelticket.entity.Approvisionnement" uses-template="entityCacheTemplate"/>
    <cache alias="com.example.fuelticket.entity.FuelMovement" uses-template="entityCacheTemplate"/>

    <!-- Cache pour les collections Hibernate -->
    <cache alias="com.example.fuelticket.entity.Station.fuelStocks" uses-template="collectionCacheTemplate"/>
    <cache alias="com.example.fuelticket.entity.Station.repartitions" uses-template="collectionCacheTemplate"/>
    <cache alias="com.example.fuelticket.entity.User.stations" uses-template="collectionCacheTemplate"/>

    <!-- Cache pour les requêtes Hibernate -->
    <cache alias="default-query-results-region" uses-template="queryCacheTemplate"/>

</config>
